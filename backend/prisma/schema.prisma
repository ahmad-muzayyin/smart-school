// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  address   String?
  logo      String?
  phone     String?
  email     String?
  website   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  latitude      Float?
  longitude     Float?
  allowedRadius Int      @default(100)

  users             User[]
  classes           Class[]
  schedules         Schedule[]
  attendance        Attendance[]
  subjects          Subject[]
  grades            Grade[]
  teachingMaterials TeachingMaterial[]
  TeacherAttendance TeacherAttendance[]

  @@map("tenant")
}

enum Role {
  OWNER
  SCHOOL_ADMIN
  TEACHER
  STUDENT
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role
  tenantId  String?
  classId   String?
  // subjectId removed for Many-to-Many
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant                   Tenant?             @relation(fields: [tenantId], references: [id])
  class                    Class?              @relation(fields: [classId], references: [id])
  // subject relation removed
  subjects                 Subject[] // Many-to-Many relation
  attendanceRecords        Attendance[]
  schedulesAsTeacher       Schedule[]
  grades                   Grade[]
  teachingMaterials        TeachingMaterial[]
  teacherAttendanceRecords TeacherAttendance[]

  @@map("user")
}

model Class {
  id        String   @id @default(uuid())
  tenantId  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant     Tenant       @relation(fields: [tenantId], references: [id])
  schedules  Schedule[]
  students   User[]
  attendance Attendance[]
  grades     Grade[]

  @@map("class")
}

model Subject {
  id          String   @id @default(uuid())
  tenantId    String
  name        String
  code        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   Tenant @relation(fields: [tenantId], references: [id])
  teachers User[]

  @@map("subject")
}

model Schedule {
  id        String   @id @default(uuid())
  tenantId  String
  classId   String
  subject   String
  teacherId String
  dayOfWeek Int
  startTime String
  endTime   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant     Tenant       @relation(fields: [tenantId], references: [id])
  class      Class        @relation(fields: [classId], references: [id])
  teacher    User         @relation(fields: [teacherId], references: [id])
  attendance Attendance[]
  grades     Grade[]

  @@map("schedule")
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

model Attendance {
  id         String           @id @default(uuid())
  tenantId   String
  scheduleId String
  studentId  String
  classId    String
  date       DateTime         @db.Date
  status     AttendanceStatus
  notes      String?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  schedule Schedule @relation(fields: [scheduleId], references: [id])
  student  User     @relation(fields: [studentId], references: [id])
  class    Class    @relation(fields: [classId], references: [id])

  @@unique([scheduleId, studentId, date])
  @@map("attendance")
}

// NEW: Grade Model
model Grade {
  id         String   @id @default(uuid())
  tenantId   String
  studentId  String
  scheduleId String
  classId    String
  subject    String
  semester   Int // 1 or 2
  category   String // "UTS", "UAS", "Tugas", "Quiz", "Praktek"
  score      Float
  maxScore   Float    @default(100)
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant   Tenant   @relation(fields: [tenantId], references: [id])
  student  User     @relation(fields: [studentId], references: [id])
  schedule Schedule @relation(fields: [scheduleId], references: [id])
  class    Class    @relation(fields: [classId], references: [id])

  @@unique([studentId, scheduleId, category, semester])
  @@index([tenantId, classId, subject, semester])
  @@index([tenantId, studentId, semester])
  @@map("grade")
}

// NEW: Teaching Material Model
model TeachingMaterial {
  id          String   @id @default(uuid())
  tenantId    String
  teacherId   String
  classId     String?
  subject     String
  title       String
  description String?
  fileUrl     String? // URL to uploaded file
  fileName    String?
  fileSize    Int? // in bytes
  fileType    String? // "PDF", "PPT", "DOC", "VIDEO", "LINK", "IMAGE"
  category    String // "Materi", "Tugas", "Latihan", "Video", "Referensi"
  isPublic    Boolean  @default(false) // Share with all classes or specific class
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant  Tenant @relation(fields: [tenantId], references: [id])
  teacher User   @relation(fields: [teacherId], references: [id])

  @@index([tenantId, teacherId, subject])
  @@index([tenantId, classId, subject])
  @@map("teachingmaterial")
}

model TeacherAttendance {
  id        String           @id @default(uuid())
  tenantId  String
  teacherId String
  date      DateTime         @db.Date
  status    AttendanceStatus

  checkInTime    DateTime?
  checkInLat     Float?
  checkInLong    Float?
  checkInPhoto   String?
  checkInAddress String?

  checkOutTime    DateTime?
  checkOutLat     Float?
  checkOutLong    Float?
  checkOutPhoto   String?
  checkOutAddress String?

  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant  Tenant @relation(fields: [tenantId], references: [id])
  teacher User   @relation(fields: [teacherId], references: [id])

  @@unique([teacherId, date])
  @@index([tenantId, teacherId, date])
  @@map("teacher_attendance")
}
